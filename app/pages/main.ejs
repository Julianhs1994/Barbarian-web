<!DOCTYPE html5>
    <html lang="en">

    <head>
        <title>Home</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="main.css" rel="stylesheet">
        <link rel="shortcut icon" href="icon.ico" type="image/x-icon">
    </head>

    <body>
        <div class="container">
            <!--Lista de productos:-->
            <% if (prodList && prodList.length > 0)  { %>
                <!--<%= (prodList.length) %>-->
                    <% prodList.forEach(objeto => { %>
                    <div class="cardProd">    
                        <!--ID: <%= objeto.pdc_id %>-->
                        <div class="divImg">
                            <img src="<%= objeto.pdc_imagen %>" alt="imagen de producto">
                        </div>
                        <div class="descripcion">
                            <p>Descripcion: <%= objeto.pdc_descripcion %></p>
                        </div>
                    </div>    
                    <% }) %>
            <% }else{ %>
                <h1>PRUEBA</h1> 
                <a>
                    <%= rol %>
                </a>               
            <% } %>    
        </div>
        <div class="pagination">
            <% if (currentPage) { %>
            <% if (currentPage > 1) { %>
                <a class="my-link" data-gender="<%= gender %>" data-page="<%= currentPage - 1 %>" data-pageSize="<%= pageSize %>">Anterior</a>
                <% } %>
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <% if (i === currentPage) { %>
                        <span class="current-page"><%= i %></span>
                        <% }else{ %>
                            <a class="my-link" data-gender="<%= gender %>" data-page="<%= i %>" data-pageSize="<%= pageSize %>"><%= i %></a>
                        <% } %>
                <% } %>
                <% if (currentPage < totalPages) { %>
                    <a class="my-link" data-gender="<%= gender %>" data-page="<%= currentPage + 1 %>" data-pageSize="<%= pageSize %>">Anterior</a>
                    <!--<a href="/?page=<%= currentPage + 1 %>&pageSize=<%= pageSize %>">Siguiente</a>-->
                <% } %>    
            <% } %>    
        </div>
    </body>
        <script src="main.js"></script>
    </html>